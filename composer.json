{
    "name": "sonata-project/comment-bundle",
    "type": "symfony-bundle",
    "description": "Symfony SonataCommentBundle",
    "keywords": ["comment", "sonata"],
    "homepage": "https://sonata-project.org/bundles/comment",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Rabaix",
            "email": "thomas.rabaix@sonata-project.org",
            "homepage": "https://sonata-project.org"
        },
        {
            "name": "Sonata Community",
            "homepage": "https://github.com/sonata-project/SonataCommentBundle/contributors"
        }
    ],
    "require": {
        "symfony/http-foundation": "~2.2|~3.0",
        "symfony/form": "~2.2|~3.0",
        "symfony/security": "~2.2|~3.0",
        "symfony/console": "~2.2|~3.0",
        "friendsofsymfony/comment-bundle": "~2.0",
        "sonata-project/core-bundle": "~2.3,>=2.3.10",
        "sonata-project/doctrine-extensions": "~1.0",
        "sonata-project/easy-extends-bundle": "~2.1"
    },
    "require-dev": {
        "sonata-project/classification-bundle": "~2.2",
        "sonata-project/media-bundle": "~2.2",
        "symfony/phpunit-bridge": "~2.7|~3.0",
        "fabpot/php-cs-fixer": "~0.1|~1.0"
    },
    "suggest": {
        "sonata-project/doctrine-orm-admin-bundle": "~2.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": { "Sonata\\CommentBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    }
}
